{
  "info": {
    "_postman_id": "f1-microservices-collection",
    "name": "F1 Microservices",
    "description": "Collection for testing F1 Auth, Race, and Telemetry services",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "auth_url",
      "value": "http://localhost:8080"
    },
    {
      "key": "race_url",
      "value": "http://localhost:8081"
    },
    {
      "key": "telemetry_url",
      "value": "http://localhost:8082"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "1. Auth Service",
      "item": [
        {
          "name": "1.1 Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{auth_url}}/actuator/health",
              "host": [
                "{{auth_url}}"
              ],
              "path": [
                "actuator",
                "health"
              ]
            }
          }
        },
        {
          "name": "1.2 Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"test123\"\n}"
            },
            "url": {
              "raw": "{{auth_url}}/api/auth/register",
              "host": [
                "{{auth_url}}"
              ],
              "path": [
                "api",
                "auth",
                "register"
              ]
            }
          }
        },
        {
          "name": "1.3 Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"test123\"\n}"
            },
            "url": {
              "raw": "{{auth_url}}/api/auth/login",
              "host": [
                "{{auth_url}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            }
          }
        },
        {
          "name": "1.4 Validate Token",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{auth_url}}/api/auth/validate",
              "host": [
                "{{auth_url}}"
              ],
              "path": [
                "api",
                "auth",
                "validate"
              ]
            }
          }
        },
        {
          "name": "1.5 Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{auth_url}}/api/auth/logout",
              "host": [
                "{{auth_url}}"
              ],
              "path": [
                "api",
                "auth",
                "logout"
              ]
            }
          }
        },
        {
          "name": "1.6 Prometheus Metrics",
